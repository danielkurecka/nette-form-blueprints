{
	"name": "daku/nette-form-blueprints",
	"type": "library",
	"description": "Manual rendering of Nette forms made easy.",
	"keywords": ["nette", "latte", "tracy-panel", "forms-generator", "bootstrap4", "bootstrap3"],

	"license": "MIT",
	"authors": [
		{
			"name": "Daniel Kurečka",
			"email": "danielkurecka@gmail.com"
		}
	],

	"require": {
		"php": ">=8.0",
		"nette/application": "^3.1.6",
		"nette/di": "^3.0",
		"nette/forms": "^3.1",
		"latte/latte": "^3.0",
		"tracy/tracy": "^2.9",
		"nette/utils": "^3.2 | ^4.0"
	},

	"require-dev": {
		"nette/bootstrap": "^3.0",
		"nette/tester": "^2.3.2"
	},

	"autoload": {
		"psr-4": {
			"Daku\\Nette\\FormBlueprints\\": "src"
		}
	},

	"autoload-dev": {
		"psr-4": {
			"Daku\\Nette\\FormBlueprints\\Tests\\": "tests/automated",
			"Daku\\Nette\\FormBlueprints\\Tests\\TestApp\\": "tests/testApp/app"
		}
	},

	"config": {
		"sort-packages": true
	}
}
